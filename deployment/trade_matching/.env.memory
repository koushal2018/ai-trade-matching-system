# AgentCore Memory Configuration for Trade Matching Agent
# 
# This file contains the configuration for the existing AgentCore Memory resource.
# Source this file before running the agent:
#   source .env.memory

# AgentCore Memory Resource with Semantic Strategy + LTM
# Semantic memory for continuous learning from matching decisions
export AGENTCORE_MEMORY_ID="trade_matching_decisions-Z3tG4b4Xsd"

# AWS Configuration
export AWS_REGION="us-east-1"
export AWS_ACCOUNT_ID="401552979575"

# Agent Configuration
export AGENT_NAME="trade-matching-agent"
export AGENT_VERSION="1.0.0"

# S3 and DynamoDB Configuration
export S3_BUCKET_NAME="trade-matching-system-agentcore-production"
export DYNAMODB_BANK_TABLE="BankTradeData"
export DYNAMODB_COUNTERPARTY_TABLE="CounterpartyTradeData"

# Bedrock Configuration
export BEDROCK_MODEL_ID="amazon.nova-pro-v1:0"

# Observability
export OBSERVABILITY_STAGE="development"

# Memory Features
export MEMORY_ENABLED="true"
export MEMORY_STORE_DECISIONS="true"
export MEMORY_RETRIEVE_CONTEXT="false"  # Set to true to enable context retrieval

