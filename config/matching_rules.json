{
  "matching_criteria": {
    "trade_id": {
      "method": "exact",
      "description": "Trade ID or Reference Number must match exactly"
    },
    "trade_date": {
      "method": "tolerance",
      "tolerance_days": 1,
      "description": "Trade dates must be within 1 business day"
    },
    "notional_amount": {
      "method": "tolerance",
      "tolerance_percentage": 0.01,
      "description": "Notional amounts must match within 0.01% (1 basis point)"
    },
    "counterparty": {
      "method": "fuzzy",
      "threshold": 0.9,
      "description": "Counterparty names must have 90%+ similarity (fuzzy matching)"
    }
  },
  "classifications": {
    "MATCHED": {
      "description": "All criteria match within tolerances",
      "action": "No action required"
    },
    "PROBABLE_MATCH": {
      "description": "Minor discrepancies on 1-2 non-critical criteria",
      "action": "Flag for review but likely acceptable"
    },
    "REVIEW_REQUIRED": {
      "description": "Multiple discrepancies requiring human investigation",
      "action": "Escalate to operations team"
    },
    "BREAK": {
      "description": "Clear mismatch on critical fields (Trade_ID, Notional)",
      "action": "Immediate escalation - potential error"
    },
    "DATA_ERROR": {
      "description": "Trades in wrong tables or missing TRADE_SOURCE",
      "action": "STOP processing - data integrity issue"
    }
  },
  "table_integrity_rules": {
    "BankTradeData": {
      "required_source": "BANK",
      "description": "All records must have TRADE_SOURCE=BANK"
    },
    "CounterpartyTradeData": {
      "required_source": "COUNTERPARTY",
      "description": "All records must have TRADE_SOURCE=COUNTERPARTY"
    }
  },
  "reporting_requirements": {
    "summary_stats": [
      "total_bank_trades",
      "total_counterparty_trades",
      "matched_count",
      "probable_match_count",
      "review_required_count",
      "break_count",
      "data_error_count",
      "match_rate_percentage"
    ],
    "detail_sections": [
      "matched_trades",
      "probable_matches",
      "review_required",
      "breaks",
      "data_errors"
    ]
  }
}
