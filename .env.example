# ==============================================
# AI TRADE MATCHING SYSTEM - ENVIRONMENT CONFIG
# ==============================================

# AWS Credentials for Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# AWS S3 Configuration
S3_BUCKET_NAME=your-s3-bucket-name

# DynamoDB Configuration
DYNAMODB_COUNTERPARTY_TABLE=CounterpartyTradeData
DYNAMODB_BANK_TABLE=BankTradeData
DYNAMODB_MATCHED_TABLE=TradeMatches

# Bedrock Model Configuration
BEDROCK_MODEL=anthropic.claude-sonnet-4-20250514-v1:0

# ==============================================
# System Configuration (Optional)
# ==============================================

# LiteLLM Logging (ERROR recommended for production)
LITELLM_LOG=ERROR

# Application Environment
ENVIRONMENT=development

# ==============================================
# Database Configuration (Optional)
# ==============================================

# Local data directory for sample PDFs (default: ./data)
DATA_DIR=./data


