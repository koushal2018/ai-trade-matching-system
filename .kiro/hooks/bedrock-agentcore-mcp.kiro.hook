{
  "enabled": true,
  "name": "Bedrock AgentCore MCP Integration",
  "description": "Automatically prompts the AI agent to use the bedrock-agentcore MCP server whenever working on agentcore-related design, implementation, or when uncertain about agentcore functionality",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.py",
      "src/**/*.yaml",
      "terraform/**/*.tf",
      "lambda/**/*.py",
      "*.md"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Review the changes in this file. If the changes involve AWS Bedrock agent functionality, agent orchestration, agent design, agent implementation, or if you're unsure whether agentcore capabilities should be used, you MUST use the bedrock-agentcore MCP server to access proper AWS Bedrock agent patterns, best practices, and implementation guidance. Check if the bedrock-agentcore MCP server can provide relevant tools, schemas, or guidance for this work."
  }
}