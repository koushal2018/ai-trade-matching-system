# ==============================================
# AI TRADE MATCHING SYSTEM - DEVELOPMENT CONFIG
# ==============================================
# This configuration connects to PRODUCTION AWS resources
# Use with caution - you're working with live data!

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
# Note: AWS credentials should be configured via AWS CLI or IAM roles
# Do not hardcode credentials in this file

# Production S3 Configuration
S3_BUCKET_NAME=trade-matching-bucket

# Production DynamoDB Tables
DYNAMODB_COUNTERPARTY_TABLE=CounterpartyTradeData
DYNAMODB_BANK_TABLE=BankTradeData
DYNAMODB_MATCHED_TABLE=TradeMatches
DYNAMODB_EXCEPTIONS_TABLE=ExceptionsTable
DYNAMODB_AGENT_REGISTRY_TABLE=AgentRegistry
DYNAMODB_HITL_REVIEWS_TABLE=HITLReviews
DYNAMODB_AUDIT_TRAIL_TABLE=AuditTrail
DYNAMODB_PROCESSING_STATUS_TABLE=trade-matching-system-processing-status
STATUS_TABLE_NAME=trade-matching-system-processing-status

# Bedrock Model Configuration
BEDROCK_MODEL=anthropic.claude-sonnet-4-20250514-v1:0

# AgentCore Configuration (if using AgentCore)
# AGENTCORE_MEMORY_ARN=arn:aws:bedrock:us-east-1:ACCOUNT_ID:memory/MEMORY_ID

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# LiteLLM Configuration
LITELLM_LOG=INFO

# Web Portal API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Data Directory for Local Testing
DATA_DIR=./data

